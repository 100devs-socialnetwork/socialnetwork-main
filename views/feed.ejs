<%- include('./partials/header.ejs'); -%>

<div class="container feed-main">
  <div class="row justify-content-center mt-5">
    <div class="feedTitle"><h5>all the </h5><h1>Fresh Tea</h1><h5>: </h5></div>
    
    <ul class="row list-unstyled">
      <% for(var i=0; i<posts.length; i++) {%>
        <li class="col-6 justify-content-between mt-5">
          <div class="feed-posts_collection">
          <a href="/post/<%= posts[i]._id%>">
            <div class="feed-postTitle_container">
            <span class="feed-postTitle"><%= posts[i].title %> </span>
          </div>
            <img class="img-fluid" src="<%= posts[i].image%>">   
            <div class="feed-post_postedBy">       
            <span class="postedBy"> <%= posts[i].user.userName %> </span>
          </div>  
          </a>
        </div>
        </li>
      <% } %>
      <a class="btn btnAlt" href="/profile">back to MyMajik</a>
      </ul>
  </div>
</div>  
   

